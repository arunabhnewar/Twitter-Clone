extends ./../layouts/header.pug



block title
    title= title 



block cssLink
    link(rel="stylesheet", href="/css/signup.css")



block jsScript
    script(src="/js/signin.js" defer) 



block bodyContent
    .signup-section
        .wrapper
            .signup-wrapper
                div.social-icon
                    i.fab.fa-twitter

                h2 Sign Up to Twitter Clone

                form(action='/signup', method="post")

                    .signup-content 
                        div
                            label(for="firstname") First Name

                            input#firstname(type="text", name="firstname" placeholder="Type first name..." class="form-control" required="")
                            p.error.firstname-error First name is required

                        div 
                            label(for="lastname") Last Name

                            input#lastname(type="text", name="lastname" placeholder="Type last name..." class="form-control" required="")
                            p.error.lastname-error Last name is required

                    .signup-content

                        div 
                            label(for="username") User Name

                            input#username(type="text", name="username" placeholder="Type user name..." class="form-control" required="")
                            p.error.username-error Username is required 

                        div 
                            label(for="email") Email

                            input#email(type="email", name="email" placeholder="Type email..." class="form-control" required="")
                            p.error.email-error Email address is required 

                    .signup-content

                        div 
                            label(for="password")  Password

                            input#password(type="password", name="password" placeholder="Type password..." class="form-control" required="")
                            p.error.password-error Password is required 


                        div 
                            label(for="confirmpassword")  Confirm password

                            input#confirmpassword(type="password", name="confirmpassword" placeholder="Type confirm password..." class="form-control" required="")
                            p.error.confirmpassword-error Confirm password is required

                    input(type="submit", value="Sign Up" class="form-control signup-btn")

                p.disclaim Already have an account? 
                    a(href='/signin') sign in here
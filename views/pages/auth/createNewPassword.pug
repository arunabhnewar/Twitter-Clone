extends ./../../layouts/header.pug


block title
    title= title 



block cssLink
    link(rel="stylesheet", href="/css/signin.css")



block jsScript
    script(src="/js/resetPassword.js" defer) 



block bodyContent
        .signin-section
            .wrapper
                .signin-wrapper
                    div.social-icon
                        i.fab.fa-twitter

                    h2 Create A New Password

                    form(action='/createNewPassword', method="post")

                        label(for="password") Password
                        
                        .user-input 
                            i.user-icon.fas.fa-unlock
                            input#userName(type="text", name="password"  class="form-control", value= user.password )
                        
                        if error.password
                            p.error.userName-error #{error.password.msg}

                        label(for="confirmPassword") Confirm Password                      
                        
                        .user-input 
                            i.user-icon.fas.fa-unlock
                            input#userName(type="text", name="confirmPassword"  class="form-control", value= user.confirmPassword )

                        if error.confirmPassword
                            p.error.userName-error #{error.confirmPassword.msg}
                            
                        input(type="hidden" name="otp" value= otp.otp)
                        input(type="hidden" name="otpId" value= otp.otpId)

                        input(type="submit" value="Save & Sign In" class="form-control signin-btn")

                        .disclaimer  
                            p.disclaim Need to sign in? 
                                a(href='/signin') sign in here
